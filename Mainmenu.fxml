<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainMenuController">
   
   <top>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FF69B4;" prefHeight="60.0" spacing="10.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label text="Tshekiso Finance Dashboard" style="-fx-text-fill: white; -fx-font-weight: bold;">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </HBox>
   </top>
   
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #696969;" spacing="15.0" BorderPane.alignment="TOP_LEFT">
         <padding>
            <Insets top="20.0" left="15.0" right="15.0" bottom="20.0" />
         </padding>
         <children>
            <Label text="Navigation" style="-fx-text-fill: white; -fx-font-weight: bold;">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>
            <Button text="Deposit" prefWidth="170.0" style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#goDeposit" />
            <Button text="Withdraw" prefWidth="170.0" style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#goWithdraw" />
            <Button text="View Balance" prefWidth="170.0" style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#goViewBalance" />
            <Button text="View History" prefWidth="170.0" style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#goViewHistory" />
            <Button text="Open Account" prefWidth="170.0" style="-fx-background-color: #FF69B4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#goOpenAccount" />
            <Button text="Logout" prefWidth="170.0" style="-fx-background-color: white; -fx-text-fill: #696969; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#logout">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
            
         </children>
      </VBox>
   </left>
   
   <center>
     <VBox alignment="CENTER" spacing="16.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
        <padding>
           <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
        </padding>
        <children>
           <Label fx:id="thankLabel" text="Thank you for banking with us" style="-fx-text-fill: #FF69B4; -fx-font-weight: bold;">
              <font>
                 <Font size="28.0" />
              </font>
           </Label>
           <Label text="Use the menu bar on the left to navigate the system." style="-fx-text-fill: #696969;">
              <font>
                 <Font size="16.0" />
              </font>
           </Label>
           <FlowPane fx:id="accountsPane" hgap="12.0" vgap="12.0" prefWrapLength="700.0" />
        </children>
     </VBox>
  </center>
</BorderPane>